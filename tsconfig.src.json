{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": true,
    "baseUrl": "./src",
    "incremental": true,
    "esModuleInterop": true,
    "outDir": "./"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}